%section.fdb-block.text-center.pt-5
    %h1{ style: "font-weight: 700; font-size: 56px" } Minesweeper board generator
    %br/
    .fdb-box.fdb-touch.pt-3{ style: "width: 90%; margin: 0 auto; min-height: 70vh" }
        .row
            .col-6
                %h2.text-left
                    Most recently generated boards
                - if @minesweeper_boards.empty?
                    %p.text-left
                        = "No board generated yet"
                - else
                    = render 'boards_list'
                    = link_to 'View all generated boards', minesweeper_boards_path, class: 'btn btn-primary'
            .col-6
                %h2.text-left
                    Generate a new board
                = render 'form'
